@using EntityLayer.Concrete
@model List<About>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Hakkımda Veri Listesi</h2>

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Hakkımda Başlığı</th>
        <th>Durumu</th>
        <th>#</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.AboutID</td>
            <td>@item.AboutDetails1</td>
            <td>@item.AboutStatus</td>

            @if (item.AboutStatus == true)
            {
                <td><a href="/About/ChangeStatus/@item.AboutID" class="btn btn-danger">Pasif Yap</a></td>
            }
            else 
            {
                <td><a href="/About/ChangeStatus/@item.AboutID" class="btn btn-success">Aktif Yap</a></td>
            }
            
        </tr>
    }
</table>

@Html.Action("AboutPartial", "About")

