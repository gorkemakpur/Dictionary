@model EntityLayer.Concrete.ImageFile
@{
    ViewBag.Title = "ImageAdd";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h2>Fotoğraf Ekleme Sayfası</h2>
<br />
@using (Html.BeginForm("ImageAdd", "Galery", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-group">
        @Html.Label("Açıklama")
        @Html.TextBoxFor(x => x.ImageName, new { @class = "form-control" })

        <br /><br />
        @Html.Label("Fotoğraf")
        <br />
        <input type="file" name="ImagePath" />
        <br /><br />

        <button class="btn btn-success">Fotoğraf Ekle</button>
    </div>
}