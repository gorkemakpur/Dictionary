<div class="col-md-3">
    <a href="/Message/NewMessage" class="btn btn-primary btn-block mb-3">Yeni Mesaj Oluştur</a>
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Seçenekler</h3>
            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                    <i class="fas fa-minus"></i>
                </button>
            </div>
        </div>
        <div class="card-body p-0">
            <ul class="nav nav-pills flex-column">
                <li class="nav-item active">
                    <a href="/Contact/Index" class="nav-link">
                        <i class="fas fa-mail-bulk"></i> İletişim
                        <span class="badge bg-primary float-right">@ViewBag.ContactCount</span>
                    </a>
                </li>



                <li class="nav-item has-treeview">
                    <a href="/Message/Inbox/" class="nav-link">
                        <i class="fas fa-inbox" onclick="location.href='/Message/Inbox/'"></i>&nbsp Gelen Mesajlar(Tümü)
                        <span class="badge bg-primary float-right">@ViewBag.AdminReceiver</span>
                    </a>
                    <ul class="nav nav-treeview">


                        <li class="nav-item">
                            <a href="/Message/MessageIsRead" class="nav-link">
                                <i class="fas fa-inbox" style="color: seagreen"> Okunmuş Mesajlar &nbsp<span class="badge bg-gradient-gray float-right">@ViewBag.readedMessage</span></i>
                            </a>
                        </li>


                        <li class="nav-item">
                            <a href="/Message/MessageUnReaded" class="nav-link">
                                <i class="fas fa-inbox" style="color: darkgoldenrod"> Okunmamış Mesajlar &nbsp<span class="badge bg-warning float-right">@ViewBag.unReadedMessage</span></i>
                            </a>
                        </li>

                    </ul>
                </li>




                <li class="nav-item">
                    <a href="/Message/Sendbox" class="nav-link">
                        <i class="far fa-envelope"></i> Gönderilen Mesajlar
                        <span class="badge bg-primary float-right">@ViewBag.AdminSender</span>

                    </a>
                </li>
                <li class="nav-item">
                    <a href="/Message/Draft" class="nav-link">
                        <i class="far fa-file-alt"></i> Taslaklar
                        <span class="badge bg-primary float-right">@ViewBag.draftMessage</span>

                        
                    </a>


                </li>

                <li class="nav-item">
                    <a href="/Message/Trash" class="nav-link">
                        <i class="far fa-trash-alt"></i> Çöp Kutusu
                        <span class="badge bg-warning float-right">@ViewBag.thrashMessage</span>
                    </a>
                </li>
            </ul>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Diğer</h3>
            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                    <i class="fas fa-minus"></i>
                </button>
            </div>
        </div>
        <div class="card-body p-0">
            <ul class="nav nav-pills flex-column">
                <li class="nav-item">
                    <a href="#" class="nav-link">
                        <i class="far fa-circle text-danger"></i>
                        Önemli
                    </a>
                </li>
                <li class="nav-item">
                    <a href="#" class="nav-link">
                        <i class="far fa-circle text-warning"></i> Tanıtım
                    </a>
                </li>
                <li class="nav-item">
                    <a href="#" class="nav-link">
                        <i class="far fa-circle text-primary"></i>
                        Sosyal Medya
                    </a>
                </li>
            </ul>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->
</div>
